@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<style>
    body {
        background-color: #b9e3d0;
    }

    .login {
        display: block;
        text-decoration: none;
        border: 2px solid blue;
        background-color: blue;
        color: white;
        width: 200px;
        border-radius: 20px;
        height: 40px;
        padding-top: 3px;
        text-align: center;
        margin: 10px auto;
    }

        .login:hover {
            background-color: rgba(0,0,0,0.5);
            border: 2px solid black;
        }


    .container {
        background-color: rgba(0,0,0,0.5);
        border: 2px solid black;
        width: 500px;
        padding-top: 20px;
        margin: 150px auto;
        border-radius: 20px;
        color: white;
    }

</style>

<div class="container">
    <form id="basic-form" action="" method="post">
        <div class="row mb-3">
            <div class="col-lg-12">
                <input type="text" class="form-control" placeholder="Username" minlength="3" name="name" required aria-label="Username" aria-describedby="basic-addon1">
            </div>
        </div>
        <div class="row mb-3">

            <div class="col-lg-12">
                <input type="password" name="password" required class="form-control" placeholder="password" aria-label="Username" aria-describedby="basic-addon1">
            </div>
        </div>
        <div class="mb-3 row">

            <div class="button">
               
                <input type="submit" class="submit login" asp-area="" asp-controller="Home" asp-action="Welcome" value="LOGIN" />
          </div>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>

<script>
    $(document).ready(function () {
        $("#basic-form").validate({
            rules: {
                name: {
                    required: true,
                    minlength: 3
                },
                password: {
                    required: true
                }
            }
        });
    });
</script>